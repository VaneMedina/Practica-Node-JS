<!DOCTYPE html>
<html lang="en">
<head>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <link rel="stylesheet" href="/static/css/style.css">
</head>
<body>
  <section>
    <div class="container">
      <ul class="nav d-flex justify-content-center my-4">
        <li class="nav-item">
          <a class="nav-link text-success" href="/">Agregar productos</a>
        </li>
        <li class="nav-item">
          <a class="nav-link text-success" href="/productos">Todos los productos</a>
        </li>
      </ul>
    </div>
  </section>
  <section>
    <div class="container">
      <div class="row">
        <div class="col-12 my-5 text-center">
          <h1>Productos</h1>
        </div>
        <% products.forEach(function(producto){ %>
            <div class="col-lg-3 col-md-6">
                <a class="card h-100" href="#">
                    <div class="text-center">
                    <img src="<%= producto.thumbnail %>" alt="" width="120" height="120"/>
                    </div>
                    <div class="text-center"> 
                    <h3 class="h4 color-blue-50 mt-4"><%= producto.title %></h3>
                    <h4 class="h4 color-blue-50 mt-4"><%= producto.price %></h4>
                </div>
                </a>
            </div>
        <% }) %>
      </div>
    </div>
  </section>
</body>
</html>